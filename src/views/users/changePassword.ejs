<%- include('../partials/header.ejs') %>
<div class="container-flud my-4 custom-container">
  <div class="row">
    <div class="col-0 col-lg-3"></div>
    <div class="col-12 col-lg-6">
      <div class="form-container center-form">
        <h3 class="text-center mb-2">Đổi mật khẩu</h3>
        <div id="complete_block" style="display: none">
          <div class="alert alert-info text-center" id="alert_info"></div>
        </div>
        <form id="update_pass_form">
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="">Mật khẩu hiện tại</label>
                <input
                  type="password"
                  class="form-control"
                  placeholder="Mật khẩu hiện tại"
                  name="password"
                  id="current_password"
                />
                <input
                  type="text"
                  name="change_pass"
                  style="display: none;"
                  value="1"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="">Mật khẩu mới</label>
                <input
                  type="password"
                  class="form-control"
                  placeholder="Mật khẩu mới"
                  name="new_password"
                  id="new_password"
                />
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <div class="form-group">
                <label for="">Xác nhận mật khẩu mới</label>
                <input
                  type="password"
                  class="form-control"
                  placeholder="Xác nhận mật khẩu mới"
                  name="confirm_new_password"
                  id="confirm_new_password"
                />
              </div>
            </div>
          </div>
          <div
            class="alert alert-danger"
            role="alert"
            id="alert_danger"
            style="display: none"
          ></div>
          <div class="d-flex justify-content-center w-100">
            <button type="submit" class="btn btn-success w-100">Đổi mật khẩu</button>
          </div>
        </form>
      </div>
    </div>
    <div class="col-0 col-lg-3"></div>
  </div>
</div>


.<%- include('../partials/footer.ejs') %>
