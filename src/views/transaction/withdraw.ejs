<%- include('../partials/header.ejs') %>
<div style="background-color: inherit;" class="swap">
    <div class="mycontainer my-4 custom-container body-full-height w-50">
        <form id="withdraw_form">
            <h2 class="title_withdraw">Rút tiền</h2>
            <div class="form-group">
                <label for="card_number">Số thẻ</label>
                <input type="number" class="form-control" id="card_number" name="card_number" placeholder="Nhập số thẻ">
            </div>
            <div class="form-group">
                <div class="div_date">
                    <label for="exp_date">Ngày hết hạn</label>
                    <input type="date" class="form-control" name="exp_date" id="exp_date">
                </div>

                <div class="div_cvv">
                    <label for="cvv">Số cvv</label>
                    <input type="number" class="form-control" id="cvv" name="cvv" placeholder="Nhập số cvv">
                </div>
            </div>
            <div class="form-group">
                <label for="withdraw_amount">Số tiền rút:</label>
                <input type="number" class="form-control" id="withdraw_amount" name="withdraw_amount" placeholder="Nhập số tiền">
            </div>
            <div class="form-group">
                <label for="fee">Phí giao dịch:</label>
                <input type="number" id="fee" name="fee">
            </div>
            <div class="form-group">
                <label for="message">Ghi chú:</label>
                <textarea rows="3" class="form-control" cols="65" name="message" id="message" placeholder="Nhập nội dung ghi chú"></textarea>
            </div>
            <div class="form-group">
                <label for="total">Tổng tiền:</label>
                <input type="number" id="total" name="total"> 
            </div>
            <div class="alert alert-danger" id="alert_danger" style="display: none;"></div>
            <div class="alert alert-info" id="alert_info" style="display: none;"></div>
            <div class="button-accept">
                <button type="submit" class="btn btn-success btn-accept">
                    Xác nhận
                  </button>
            </div>
            <div id="complete_block" style="display: none" class="mt-3">
                <div class="d-flex justify-content-around flex-wrap">
                    <a id="complete_btn1" style="display: block" href="/"><div class="btn btn-success mb-2" id="alert_info2">Quay lại trang chủ</div></a>
                    <a id="complete_btn2" style="display: blcok" href="/transaction/withdraw"><div class="btn btn-success mb-2" id="alert_info2">Giao dịch khác</div></a>
                </div>
            </div>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>
