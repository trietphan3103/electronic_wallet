<%- include('../partials/header.ejs') %>
<div class="container-flud my-4 custom-container">
    <div class="row">
        <div class="col-0 col-lg-3"></div>
        <div class="col">
            <div class="form-container center-form">
                <h3 class="text-center mb-2">Xác thực OTP</h3>
                <form>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="">Mã OTP</label>
                                <input type="text" class="form-control" placeholder="Nhập mã OTP">
                              </div>
                        </div>
                    </div>
                    <div class="alert alert-danger" role="alert">
                        This is a danger alert—check it out!
                    </div>
                    <div class="d-flex justify-content-center w-100">
                        <button type="submit" class="btn btn-success w-100">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-0 col-lg-3"></div>
    </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>
  
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        Chuyển tiền thành công
    </div>
    <div class="modal-footer d-flex justify-content-center">
        <button type="button" class="btn btn-primary w-25" data-dismiss="modal">OK</button>
    </div>
    </div>
</div>
</div>
<%- include('../partials/footer.ejs') %>